#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

set -e

parentDirectory="$(cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd -P)"
dotfilesDirectory="$(cd "$( dirname "$parentDirectory" )" && pwd -P)"

displayUsageAndExit() {
  echo "dot -- dotfiles management"
  echo ""
  echo "Usage: dot [options]"
  echo ""
  echo "Options:"
  echo "  -e, --edit   Open dotfiles directory for editing"
  echo "  -u, --update Dump Brewfile from current state, commit and push"
  echo "  -h, --help   Show this help message and exit"
  exit
}

while test $# -gt 0; do
  case "$1" in
    "-h"|"--help")
      displayUsageAndExit
      ;;
    "-e"|"--edit")
      exec "$EDITOR" "$dotfilesDirectory"
      exit
      ;;
    "-u"|"--update")
      export DOTFILES="$dotfilesDirectory"
      (cd "$DOTFILES" && brew bundle dump --force)
      (cd "$DOTFILES" && git add -A && git diff --cached --quiet) && echo "Nothing to commit" || \
        (cd "$DOTFILES" && git commit -m "chore: sync dotfiles state" && git push)
      exit
      ;;
    *)
      echo "Invalid option: $1"
      displayUsageAndExit
      ;;
  esac
  shift
done

export DOTFILES=$HOME/dotfiles

# Authenticate sudo once so homebrew/install, script/install, set-defaults don't each prompt
echo "› sudo (once for this run)"
sudo -v

# Update dotfiles themselves
echo "› git pull"
git -C "$DOTFILES" pull

# Install homebrew
"$DOTFILES/homebrew/install.sh" 2>&1

# Upgrade homebrew
echo "› brew update"
brew update

echo "› brew upgrade"
brew upgrade

# Install software
echo "› script/install"
"$DOTFILES/script/install"

# Set macOS defaults (Touch ID setup needs pam-reattach from brew bundle)
if [ "$(uname -s)" == "Darwin" ]; then
  echo "› macos/set-defaults.sh"
  "$DOTFILES/macos/set-defaults.sh"
fi
